                                                <Style TargetType="Label">
                                                    <Setter Property="Width" Value="160" />
                                                </Style>
                                                <Style TargetType="TextBox">
                                                    <Setter Property="Width" Value="250"/>
                                                    <Setter Property="Height" Value="18" />
                                                </Style>

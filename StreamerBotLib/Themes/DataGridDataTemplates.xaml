<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="{x:Type DataGrid}">
        <Setter Property="AlternationCount" Value="1" />
        <Setter Property="ScrollViewer.CanContentScroll" Value="True" />
        <Setter Property="AutoGenerateColumns" Value="False" />
        <Setter Property="Foreground" Value="{DynamicResource ForegroundText}" />
        <Setter Property="Background" Value="{DynamicResource PartBackground}" />
        <Setter Property="RowBackground" Value="{DynamicResource DataGridBackground}" />
        <Setter Property="AlternatingRowBackground" Value="{DynamicResource DataGridAlternateColor}"/>

        <Setter Property="ColumnHeaderStyle">
            <Setter.Value>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Background" Value="{DynamicResource DataGridColumnHeaderBackground}" />
                    <Setter Property="Foreground" Value="{DynamicResource ForegroundText}" />
                    <Setter Property="Padding" Value="8,0" />
                </Style>
            </Setter.Value>
        </Setter>

        <Setter Property="RowHeaderStyle">
            <Setter.Value>
                <Style TargetType="{x:Type DataGridRowHeader}">
                    <Setter Property="Background" Value="{DynamicResource DataGridRowHeaderBackground}" />
                    <Setter Property="Width" Value="5" />
                </Style>
            </Setter.Value>
        </Setter>
    </Style>

    <DataTemplate x:Key="ReadOnlyIntTemplate">
        <StackPanel>
            <TextBlock Text="{Binding Id}" />
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:Key="DateFirstSeenTemplate">
        <StackPanel>
            <Border BorderThickness="1">
                <TextBlock Text="{Binding FirstDateSeen, StringFormat={}{0:MMM dd, yyyy}}" />
            </Border>
            <Border BorderThickness="1">
                <TextBlock Text="{Binding FirstDateSeen, StringFormat={}{0:HH:mm.ss}}"/>
            </Border>
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:Key="DateCurrentLoginTemplate">
        <StackPanel>
            <Border BorderThickness="1">
                <TextBlock Text="{Binding CurrLoginDate, StringFormat={}{0:MMM dd, yyyy}}" />
            </Border>
            <Border BorderThickness="1">
                <TextBlock Text="{Binding CurrLoginDate, StringFormat={}{0:HH:mm.ss}}"/>
            </Border>
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:Key="DateLastSeenTemplate">
        <StackPanel>
            <Border BorderThickness="1">
                <TextBlock Text="{Binding LastDateSeen, StringFormat={}{0:MMM dd, yyyy}}" />
            </Border>
            <Border BorderThickness="1">
                <TextBlock Text="{Binding LastDateSeen, StringFormat={}{0:HH:mm.ss}}"/>
            </Border>
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:Key="DateFollowedTemplate">
        <StackPanel>
            <Border BorderThickness="1">
                <TextBlock Text="{Binding FollowedDate, StringFormat={}{0:MMM dd, yyyy}}" />
            </Border>
            <Border BorderThickness="1">
                <TextBlock Text="{Binding FollowedDate, StringFormat={}{0:HH:mm.ss}}"/>
            </Border>
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:Key="DateStatusChangedTemplate">
        <StackPanel>
            <Border BorderThickness="1">
                <TextBlock Text="{Binding StatusChangeDate, StringFormat={}{0:MMM dd, yyyy}}" />
            </Border>
            <Border BorderThickness="1">
                <TextBlock Text="{Binding StatusChangeDate, StringFormat={}{0:HH:mm.ss}}"/>
            </Border>
        </StackPanel>
    </DataTemplate>

 
</ResourceDictionary>